<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activitySribble"
            type="com.wyldsoft.notes.scribble.ui.ScribbleDemoActivity" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button_touch_screen_scribble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scribble Touch Screen Demo" />

        

        <Button
            android:id="@+id/button_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{activitySribble::button_notes}"
            android:text="Notes" />
    </LinearLayout>
</layout>